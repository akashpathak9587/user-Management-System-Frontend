doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Admin Dashboard | Registration and Login System
        link(rel="stylesheet", href="../css/font-awesome.css")
        link(rel="stylesheet", href="../css/change-password-profile.css")
        script(src="../js/script.js" defer) 
    body 
        nav 
            .logo 
                h1 
                    a(href="welcome.html") User Panel 
            .nav-button#navButton
                button 
                    i.fas.fa-bars
            .profile-button#profileButton
                a(href="#") 
                    i.fa-solid.fa-user
                    i.fa-solid.fa-caret-down
        main#mainPage
            .sidebar#sidebar 
                .title 
                    h1 CORE 
                .sidebar-link
                    ul.sidebar-link-list
                        li.sidebar-link-list-item
                            a(href="welcome.html") 
                                i.fa-solid.fa-gauge-high
                                p Dashboard
                        li.sidebar-link-list-item
                            a(href="profile.html") 
                                i.fas.fa-user
                                p Profile
                        li.sidebar-link-list-item
                            a(href="change-password.html") 
                                i.fas.fa-key
                                p Change Password
                        li.sidebar-link-list-item
                            a(href="index.html") 
                                i.fa-solid.fa-right-from-bracket
                                p Signout
            section.main
                .main-title
                    h1 Change Password
                .main-container 
                    .main-container-form 
                        form(action="#", method="get") 
                            .main-container-form-current 
                                .main-container-form-current-label
                                    label(for="currentPass") Current Password
                                .main-container-form-current-input 
                                    input#currentPass(type="password", name="currPass") 
                            .main-container-form-new 
                                .main-container-form-new-label 
                                    label(for="newPass") New Password 
                                .main-container-form-new-input 
                                    input#newPass(type="password", name="newPass")
                            .main-container-form-confirm 
                                .main-container-form-confirm-label 
                                    label(for="confPass") Confirm Password
                                .main-container-form-confirm-input 
                                    input#confPass(type="password", name="confPass")
                            .main-container-form-submit 
                                input(type="submit", value="submit")
                footer 
                    p copyright &#169; 2022
                    a(href="#") Akash Pathak
        .profile-box 
            a(href="change-password.html") Settings
            a(href="change-password.html") Activity Log 
            a(href="index.html") Logout